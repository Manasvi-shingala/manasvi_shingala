main()
{
	int base_salary=100;
	int HRA;
	int DA;
	int TA;
	int gross_salary;

	clrscr();

	printf("enter the value of HRD :");
	scanf("%d",HRA);

	printf("Enter the value of DA :");
	scanf("%d",DA);

	printf("enter the value of TA :");
